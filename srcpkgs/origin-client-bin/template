# Template file for 'origin-client-bin'
pkgname=origin-client-bin
version=3.11.0
revision=1
_hash=0cbc58b
archs="x86_64"
create_wrksrc=yes
short_desc="Client tools for the Origin platform that powers OpenShift"
maintainer="shizonic <realtiaz@gmail.com>"
license="Apache-2.0"
homepage="https://github.com/openshift/origin"
distfiles="https://github.com/openshift/origin/releases/download/v${version}/openshift-origin-client-tools-v${version}-${_hash}-linux-64bit.tar.gz"
checksum="4b0f07428ba854174c58d2e38287e5402964c9a9355f6c359d1242efd0990da3"
nostrip=oc

do_install() {
	vinstall ${FILESDIR}/oc 644 /usr/share/bash-completion/completion
	vinstall ${FILESDIR}/_oc 644 /usr/share/zsh/site-functions
	vbin openshift-origin-client-tools-v${version}-${_hash}-linux-64bit/oc
}
